package exemploUm;
import java.util.Scanner;

public class mediaNota {

	public static void main(String[] args) {
		Scanner read = new Scanner(System.in);
		
		System.out.println("--- Bem-Vindo ao portal do aluno ---");
		System.out.println("--- Faça aqui o calculo de médias ---");
		
		System.out.println("Digite abaixo valor da nota de seu primeiro semestre: \nEx: 10.0");
		System.out.print("Nota:");
		float firstGrade  = read.nextFloat();
		
		System.out.println("Digite abaixo valor da nota de seu primeiro semestre: \nEx: 10.0");
		System.out.print("Nota:");
		float secondGrade = read.nextFloat();
		
		System.out.println("Digite abaixo valor da nota de seu primeiro semestre: \nEx: 10.0");
		System.out.print("Nota:");
		float thirdGrade  = read.nextFloat();
		
		System.out.println("Digite abaixo valor da nota de seu primeiro semestre: \nEx: 10.0");
		System.out.print("Nota:");
		float fourthGrade = read.nextFloat();
		
		System.out.println("--- Calculando a média dos semestres ---");
		float finalGrade = (firstGrade + secondGrade + thirdGrade + fourthGrade) % 4 ;
		System.out.println("--- Sua média semestral é de ---");
		System.out.printf("   --- " + finalGrade + " ---   ");
		
		
		
	}

}
